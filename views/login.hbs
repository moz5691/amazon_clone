<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<div class="text-center d-flex justify-content-center">
	<div class="col-md-6 col-md-offset-3">
		<div class="panel border rounded-25 mt-5 pl-4 pr-4">
			{{!-- header of login-register --}}
			<div class="row p-1 panel-heading">
				<section class="col col-xs-6">
					<a href="#" class="active font-weight-bold" id="login-form-link">Login</a>
				</section>
				<section class="col col-xs-6">
					<a href="#" class="font-weight-bold" id="register-form-link">Register</a>
				</section>
				<hr>
			</div>
			{{!-- Login form --}}
			<form id="login-form" action="/users/loginUser" method="post" role="form" style="display: block;">
				<section class="form-group">
					<input type="text" name="emaillogin" id="emaillogin" tabindex="1" class="form-control" placeholder="Email..."
					 value="">
				</section>
				<section class="form-group">
					<input type="password" name="passwordlogin" id="passwordlogin" data-toggle="tooltip" title="must contain at least (1 lowercase, 1 uppercase alphabetical character,1 numeric,and ! @ # $ - _) minimum 8 char or longer!!!"
					 tabindex="2" class="form-control" placeholder="Password">
				</section>
				<section class="form-group">
					<div class="text-center d-flex justify-content-center">
						<div class="col-sm-6 col-sm-offset-3">
							<input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-primary"
							 value="Log In">
						</div>
					</div>
				</section>
				{{!-- <section class="form-group text-center d-flex justify-content-center">
					<a href="#" tabindex="5" class="forgot-password">Forgot Password?</a>
				</section> --}}
			</form>
			{{!-- register form --}}
			<form id="register-form" action="/users/newUser" method="post" role="form" style="display: none;">
				<section class="form-group">
					<input type="text" name="username" data-toggle="tooltip" title=" username must start with letters, 5-30 char use: (uppercase, lowecase, numbers, !,@,#,$,-,_)"
					 id="username" tabindex="1" class="form-control" placeholder="Username" value="">
				</section>
				<section class="form-group">
					<input type="email" name="email" id="email" tabindex="1" class="form-control" placeholder="Email Address" value="">
				</section>
				<section class="form-group">
					<input type="password" name="password" data-toggle="tooltip" title="must contain at least (1 lowercase, 1 uppercase alphabetical character,1 numeric,and ! @ # $ - _) minimum 8 char or longer!!!"
					 id="password" tabindex="2" class="form-control" placeholder="Password">
				</section>
				<section class="form-group">
					<input type="password" id="confirm-password" tabindex="2" class="form-control" placeholder="Confirm Password">
				</section>
				<section class="form-group">
					<div class="text-center d-flex justify-content-center">
						<div class="col-sm-6 col-sm-offset-3">
							<button type="submit" id="register-submit" tabindex="4" class="form-control btn btn-primary">Register Now</button>
						</div>
					</div>
				</section>
			</form>

		</div>
	</div>
</div>

<div id="warning-message" class="alert alert-danger mt-5" role="alert">

</div>

